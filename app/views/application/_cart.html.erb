<div class="cart-body border border-warning" id="cart">
    <div class="cart-title">
        <h4>Panier</h4>
    </div>
    <div class="cart-elements">
        <% @cart.each do |item| %>
            <div>
                <a href="<%= item_path(item.item_id) %>" class="nav-link text-dark" ><%= Item.find(item.item_id).name %><br>$<%= item.price %></a>
                <%= link_to "Enlever", cart_path(item.id), method: :delete, class: "nav-link text-danger" %>
            </div>
        <% end %>
    </div>
    <div class="bottom-payment">
        <%= link_to "Acheter", item_orders_path(1), method: :post, class: "btn btn-sm btn-warning" %>
    </div>
</div>